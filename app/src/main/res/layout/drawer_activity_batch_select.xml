<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSysWindows">

    <!-- normal content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- using toolbar so that drawer can be displayed
             in front of the action bar -->
        <include layout="@layout/incl_toolbar" />
        <include layout="@layout/incl_activity_batch_select" />
    </LinearLayout>

    <!-- drawer -->
    <include layout="@layout/incl_drawer" />
</android.support.v4.widget.DrawerLayout>
