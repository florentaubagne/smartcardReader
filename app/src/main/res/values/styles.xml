<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="app_base_theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="app_theme" parent="app_base_theme">     
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <!-- support library compatibility -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/action_bar</item>
        <item name="actionMenuTextColor">@color/actionbar_text</item>
    </style>

    <style name="toolbar_base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="toolbar" parent="toolbar_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="toolbar_settings" parent="toolbar">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="drawer_subheader">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/drawer_subheader</item>
    </style>

    <style name="drawer_entry">
        <item name="android:background">@drawable/nav_selector</item>
    </style>

    <style name="drawer_image">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="drawer_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/drawer_text</item>
    </style>

    <style name="drawer_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_thin_separator</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="action_bar" parent="Widget.AppCompat.ActionBar">
        <!-- leave display options disabled here to allow smooth font control -->
        <item name="android:displayOptions"></item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:spinnerItemStyle">@style/spinner_item_actionbar</item>
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="spinner_item_actionbar" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="spinner_dropdown_item_actionbar" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item> -->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="spinner_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="spinner_dropdown_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>        
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_separator</item>
        <item name="android:background">@color/bg_separator</item>
        <item name="android:layout_marginTop">@dimen/margin_separator</item>
        <item name="android:layout_marginBottom">@dimen/margin_window</item>
    </style>

    <style name="thin_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_thin_separator</item>
        <item name="android:background">@color/bg_separator</item>
        <item name="android:layout_marginTop">@dimen/margin_separator</item>
        <item name="android:layout_marginBottom">@dimen/margin_window</item>
    </style>

    <style name="list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:clickable">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:paddingTop">@dimen/margin_window</item>
        <item name="android:paddingBottom">@dimen/margin_window</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/dialog_title</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_title" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="dialog_text" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">false</item>
        <!-- <item name="android:textColor">@color/text_normal</item> -->
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--<style name="button" parent="android:Widget.AppCompat.Button">-->
    <style name="button" parent="android:style/Widget.Holo.Button">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="spinner_button" parent="Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
